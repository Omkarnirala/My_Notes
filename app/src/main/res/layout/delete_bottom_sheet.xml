<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/bottomSheet"
    android:orientation="vertical"
    android:background="@drawable/bottom_ui"
    android:layout_height="wrap_content">

    <View
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/delete_indicator_shape"
        android:layout_height="7dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Are you sure want to delete\n this Note ?"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/no_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="No"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/no_delete"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/yes_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Yes"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/yes_delete"
        android:padding="4dp"/>



</LinearLayout>